        <title>Placeholder - awfixer.foundation</title>
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap"
            rel="stylesheet"
        />
        <style>
            /* Ensure html and body take full height and remove default margin */
            html,
            body {
                height: 100%;
                margin: 0;
                padding: 0;
            }

            #background {
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                z-index: -1;
                /* Increased blur for better text readability */
                filter: blur(15px);
                /* Ensure background covers the area */
                object-fit: cover;
            }

            #container {
                font-family:
                    Inter, Roboto, "Helvetica Neue", "Arial Nova",
                    "Nimbus Sans", Arial, sans-serif;
                /* Use min-height to allow content to grow if needed */
                min-height: 100vh; /* Use viewport height */
                /* Flexbox properties for centering */
                display: flex;
                align-items: center; /* Vertical centering */
                justify-content: center; /* Horizontal centering */
                /* Add some padding for breathing room, especially on smaller screens */
                padding: 16px;
                box-sizing: border-box; /* Include padding in height calculation */
                text-align: center; /* Center text within the container */
            }

            /* Removed height and centering properties from main as container handles it */
            main {
                /* Max width to prevent content from becoming too wide on large screens */
                max-width: 600px;
                /* Background for readability over the blurred image */
                background-color: rgba(
                    255,
                    255,
                    255,
                    0.8
                ); /* Semi-transparent white */
                padding: 2rem;
                border-radius: 16px; /* Rounded corners */
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1); /* Subtle shadow */
            }

            #hero {
                display: flex;
                /* Align items horizontally in the center */
                align-items: center;
                flex-direction: column;
                /* Removed justify-content and padding, handled by main/container */
            }

            h1 {
                font-size: 22px;
                /* Adjusted margin for better spacing */
                margin-top: 0;
                margin-bottom: 1.5em; /* Add space below heading */
                color: #111827; /* Ensure heading color is set */
                line-height: 1.5; /* Improve readability */
            }

            #links {
                display: flex;
                gap: 16px;
                /* Allow buttons to wrap on smaller screens */
                flex-wrap: wrap;
                /* Center the buttons if they wrap */
                justify-content: center;
            }

            #links a {
                display: flex;
                align-items: center;
                justify-content: center; /* Center content within the link/button */
                padding: 10px 16px; /* Adjusted padding */
                color: #111827;
                text-decoration: none;
                transition: all 0.2s ease-in-out; /* Smooth transition for hover effects */
                border-radius: 10px; /* Rounded corners for all links */
                font-weight: 500; /* Slightly bolder text */
            }

            #links a:hover {
                color: rgb(78, 80, 86);
                transform: translateY(-2px); /* Slight lift effect on hover */
            }

            #links a svg {
                height: 1.1em; /* Slightly larger icon */
                margin-left: 8px;
            }

            #links a.button {
                color: white;
                background: linear-gradient(83.21deg, #3245ff 0%, #bc52ee 100%);
                box-shadow:
                    inset 0 0 0 1px rgba(255, 255, 255, 0.12),
                    0 2px 4px rgba(0, 0, 0, 0.2); /* Adjusted shadow */
            }

            #links a.button:hover {
                color: white; /* Keep text white on hover */
                box-shadow:
                    inset 0 0 0 1px rgba(255, 255, 255, 0.12),
                    0 4px 8px rgba(0, 0, 0, 0.25); /* Enhance shadow on hover */
                /* Keep transform consistent */
                transform: translateY(-2px);
            }

            /* Removed unused styles like pre, h2, p, code, .box, #news for clarity */
            /* Removed media queries that might conflict with centering, can be added back if needed */

            /* Simple media query for button padding on smaller screens */
            @media screen and (max-width: 480px) {
                #links a {
                    padding: 12px 18px; /* Slightly larger padding for easier tapping */
                    width: 100%; /* Make buttons full width */
                    box-sizing: border-box; /* Include padding in width */
                }
                main {
                    padding: 1.5rem; /* Reduce padding slightly */
                }
                h1 {
                    font-size: 20px; /* Slightly smaller heading */
                }
            }
        </style>
    </head>
